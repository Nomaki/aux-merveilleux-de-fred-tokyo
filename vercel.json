{
  "functions": {
    "api/check-capacity.js": {
      "memory": 256,
      "maxDuration": 5
    },
    "api/create-payment-intent.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/admin.js": {
      "memory": 1024,
      "maxDuration": 15
    },
    "api/webhook.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/daily-summary.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/send-confirmation-email.js": {
      "memory": 512,
      "maxDuration": 15
    }
  },
  "crons": [
    {
      "path": "/api/daily-summary",
      "schedule": "0 15 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, stripe-signature"
        }
      ]
    }
  ]
}
